<main class="container">
  <% @posts.each do |post| %>
    <div class="card" style="width: 30rem; margin-bottom: 0.5rem;">
      <div class="card-body">
        <p class="card-text">
          <%= post.content %>
        </p>
        <h6 class="card-subtitle mb-2 text-muted">
          投稿日時：<%= post.created_at %>
        </h6>
      </div>
    </div>
  <% end %>
</main>